# Database Configuration
DATABASE_URL=postgres://martnex:martnex_dev_password@localhost:5432/martnex?sslmode=disable

# Redis Configuration (used for cache, events, and workflows)
REDIS_URL=redis://localhost:6379

# Security Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=supersecret-change-in-production
COOKIE_SECRET=supersecret-cookie-change-in-production

# Server Configuration
PORT=9001
NODE_ENV=development

# CORS Configuration
ADMIN_CORS=http://localhost:7001,http://localhost:9001
STORE_CORS=http://localhost:3000
AUTH_CORS=http://localhost:7001,http://localhost:9001,http://localhost:3000

# ============================================
# STORE MODE - THE KEY CONFIGURATION
# ============================================
# This ONE variable controls the entire platform behavior
#
# SINGLE_STORE: You are the only seller (simple e-commerce)
#   - You manage products via admin dashboard
#   - No seller registration or commissions
#   - Simpler, fewer features
#
# MULTI_VENDOR_MARKETPLACE: Multiple sellers (marketplace platform)
#   - Sellers can register and list products
#   - Automatic commission calculations
#   - Seller dashboards and payouts
#   - Full marketplace features
#
# Default: MULTI_VENDOR_MARKETPLACE
# ============================================

STORE_MODE=MULTI_VENDOR_MARKETPLACE
# STORE_MODE=SINGLE_STORE

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# These work in BOTH store modes
# Only enable if you need these specific features

# Optional Features (disabled by default)
# Set to "true" to enable
ENABLE_REVIEWS=false
ENABLE_DISPUTES=false
ENABLE_WISHLIST=false
ENABLE_LOYALTY=false
ENABLE_ANALYTICS=false
ENABLE_PRODUCT_COMPARISON=false
ENABLE_LIVE_CHAT=false

# Payment Providers (at least one required)
ENABLE_STRIPE=true
ENABLE_PAYPAL=false
ENABLE_BANK_TRANSFER=false
ENABLE_COD=false

# COD (Cash on Delivery) Configuration
# Popular in India, Pakistan, Middle East, Southeast Asia
# Note: COD is automatically disabled for digital products at checkout

# COD Country Restrictions (comma-separated ISO 3166-1 alpha-2 codes)
# Examples:
#   IN,PK,BD,AE,SA = India, Pakistan, Bangladesh, UAE, Saudi Arabia only
#   IN = India only (domestic only)
#   * = All countries (no restrictions)
#   (empty/commented) = All countries (default)
COD_ALLOWED_COUNTRIES=

# Alternative: Restrict to single domestic country
# DOMESTIC_COUNTRY=IN
# COD_DOMESTIC_ONLY=true

# Notification Channels
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_PUSH=false

# Storage Providers (at least one required)
# Local storage is enabled by default for development
ENABLE_LOCAL_STORAGE=true
ENABLE_S3=false
ENABLE_CLOUDINARY=false

# Multi-vendor Settings (only if STORE_MODE=MULTI_VENDOR_MARKETPLACE)
# These are ignored in SINGLE_STORE mode
REQUIRE_SELLER_VERIFICATION=true
DEFAULT_COMMISSION_RATE=10
MAX_COMMISSION_RATE=50
MINIMUM_PAYOUT_AMOUNT=50
PAYOUT_ESCROW_DAYS=7

# ============================================
# INTEGRATION CREDENTIALS
# ============================================
# Only needed if corresponding features are enabled

# Stripe (if ENABLE_STRIPE=true)
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal (if ENABLE_PAYPAL=true)
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...

# SendGrid (if ENABLE_EMAIL=true)
# SENDGRID_API_KEY=SG....
# SENDGRID_FROM=noreply@yourstore.com

# Twilio (if ENABLE_SMS=true)
# TWILIO_ACCOUNT_SID=...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1...

# AWS S3 (if ENABLE_S3=true)
# S3_URL=https://your-bucket.s3.amazonaws.com
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=...
# S3_SECRET_ACCESS_KEY=...

# Cloudinary (if ENABLE_CLOUDINARY=true)
# CLOUDINARY_CLOUD_NAME=...
# CLOUDINARY_API_KEY=...
# CLOUDINARY_API_SECRET=...

# Database Configuration
DATABASE_URL=postgres://martnex:martnex_dev_password@localhost:5432/martnex?sslmode=disable

# Redis Configuration (used for cache, events, and workflows)
REDIS_URL=redis://localhost:6379

# Security Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=supersecret-change-in-production
COOKIE_SECRET=supersecret-cookie-change-in-production

# Server Configuration
PORT=9001
NODE_ENV=development

# CORS Configuration
ADMIN_CORS=http://localhost:7001,http://localhost:9001
STORE_CORS=http://localhost:3000
AUTH_CORS=http://localhost:7001,http://localhost:9001,http://localhost:3000

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features independently
# Philosophy: "Give users the banana, not the monkey holding the banana"

# Core Marketplace Features (enabled by default)
# Set to "false" to disable for simple e-commerce stores
ENABLE_MULTI_VENDOR=true
ENABLE_COMMISSION=true
ENABLE_PAYOUT=true

# Optional Features (disabled by default)
# Set to "true" to enable
ENABLE_REVIEWS=false
ENABLE_DISPUTES=false
ENABLE_WISHLIST=false
ENABLE_LOYALTY=false
ENABLE_ANALYTICS=false
ENABLE_PRODUCT_COMPARISON=false
ENABLE_LIVE_CHAT=false

# Payment Providers (enable as needed)
ENABLE_STRIPE=false
ENABLE_PAYPAL=false

# Notification Channels (enable as needed)
ENABLE_EMAIL=false
ENABLE_SMS=false
ENABLE_PUSH=false

# Storage Providers (enable one)
ENABLE_S3=false
ENABLE_CLOUDINARY=false

# ============================================
# INTEGRATION CREDENTIALS
# ============================================
# Only needed if corresponding features are enabled

# Stripe (if ENABLE_STRIPE=true)
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal (if ENABLE_PAYPAL=true)
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...

# SendGrid (if ENABLE_EMAIL=true)
# SENDGRID_API_KEY=SG....
# SENDGRID_FROM=noreply@yourstore.com

# Twilio (if ENABLE_SMS=true)
# TWILIO_ACCOUNT_SID=...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1...

# AWS S3 (if ENABLE_S3=true)
# S3_URL=https://your-bucket.s3.amazonaws.com
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=...
# S3_SECRET_ACCESS_KEY=...

# Cloudinary (if ENABLE_CLOUDINARY=true)
# CLOUDINARY_CLOUD_NAME=...
# CLOUDINARY_API_KEY=...
# CLOUDINARY_API_SECRET=...

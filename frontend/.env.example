# Medusa Backend URL
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9001

# Base URL for the frontend
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Environment
NODE_ENV=development

# ============================================
# FEATURE FLAGS
# ============================================
# Should match backend feature configuration

# Core Marketplace Features
NEXT_PUBLIC_ENABLE_MULTI_VENDOR=true
NEXT_PUBLIC_ENABLE_COMMISSION=true

# Optional Features
NEXT_PUBLIC_ENABLE_REVIEWS=false
NEXT_PUBLIC_ENABLE_DISPUTES=false
NEXT_PUBLIC_ENABLE_WISHLIST=false
NEXT_PUBLIC_ENABLE_LOYALTY=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PRODUCT_COMPARISON=false
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false

# Payment Providers
NEXT_PUBLIC_ENABLE_STRIPE=false
NEXT_PUBLIC_ENABLE_PAYPAL=false

# Stripe Public Key (if ENABLE_STRIPE=true)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

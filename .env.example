# Martnex Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://username:password@localhost:5432/martnex_dev

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=9001
NODE_ENV=development
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:7001

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# Medusa Admin
MEDUSA_ADMIN_ONBOARDING_TYPE=default

# File Storage (Choose one)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Service (Choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@martnex.io

# OR Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_FROM_EMAIL=noreply@martnex.io

# SMS Service (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
# Stripe
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900100
RATE_LIMIT_MAX_REQUESTS=100

# Commission Settings
DEFAULT_COMMISSION_RATE=10.00

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin Email (for notifications)
ADMIN_EMAIL=admin@martnex.io
